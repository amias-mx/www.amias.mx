---
import SectionTitle from "../ui/SectionTitle.astro";
import ServiceCard from "../ui/ServiceCard.astro";
import Section from "./Section.astro";

const cards = [
  {
    index: 1,
    titleTop: "Investigación y desarrollo",
    titleBottom: "de modelos de IA fundacionales",
    alt: "Investigación y desarrollo de modelos de IA fundacionales",
    link: "#services",
  },
  {
    index: 2,
    titleTop: "Formación y",
    titleBottom: "capacitación",
    alt: "Formación y capacitación",
    link: "#services",
  },
];

const description =
  "En la Alianza Mexicana para la IA Soberana, impulsamos proyectos estratégicos de IA y colaboramos con entidades públicas, académicas y privadas.";
---

<Section>
  <div class="mt-[140px] mb-5">
    <SectionTitle sectionTitle="Iniciativas" description={description} />
    <div class="grid lg:grid-cols-2 gap-10">
      {
        cards.map((card) => (
          <ServiceCard
            index={card.index}
            titleTop={card.titleTop}
            titleBottom={card.titleBottom}
            alt={card.alt}
            link={card.link}
          />
        ))
      }
    </div>
  </div>
</Section>
